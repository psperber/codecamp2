<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FragmentStyle" >

    <TextView
        android:id="@+id/attackHeaderTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="@string/attack_header_textview"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/headline"
        android:textSize="@dimen/headline_textsize" />

    <TextView
        android:id="@+id/unittypeHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/attackHeaderTextView"
        android:layout_marginTop="@dimen/vertical_space"
        android:text="@string/attack_unitheader_textview"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/unittypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/unittypeHeaderTextView"
        android:layout_marginLeft="@dimen/horizontal_space"
        android:layout_toRightOf="@+id/unittypeHeaderTextView"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/setHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/unittypeTextView"
        android:layout_marginTop="@dimen/vertical_space"
        android:text="@string/attack_setheader_textview"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/setTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/setHeaderTextView"
        android:layout_marginLeft="@dimen/horizontal_space"
        android:layout_toRightOf="@+id/setHeaderTextView"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/overallCountHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/setHeaderTextView"
        android:layout_marginTop="@dimen/vertical_space"
        android:text="@string/attack_overallcountheader_textview"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/overallCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/overallCountHeaderTextView"
        android:layout_marginLeft="@dimen/horizontal_space"
        android:layout_toRightOf="@+id/overallCountHeaderTextView"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/currentCountHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/overallCountHeaderTextView"
        android:layout_marginTop="@dimen/vertical_space"
        android:text="@string/attack_currentcountheader_textview"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/currentCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/currentCountHeaderTextView"
        android:layout_marginLeft="@dimen/horizontal_space"
        android:layout_toRightOf="@+id/currentCountHeaderTextView"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/attack_start_button" />

    <Button
        android:id="@+id/nextRoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/attack_nextround_button" />

</RelativeLayout>